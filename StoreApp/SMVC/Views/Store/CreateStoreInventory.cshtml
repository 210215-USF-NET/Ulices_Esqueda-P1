@using SModels;
@using System.Collections.Generic;

@model SMVC.Models.StoreInventoryVM

@{
    ViewData["Title"] = "Edit";
    List<Product> products = ViewBag.products;
    int id = ViewBag.StoreID;
}

<h3 class="text-center text-white-50">Edit Store Inventory</h3>
<h8 class="text-center text-white-50">The quantity adds to the product</h8>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStoreInventory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label text-white-50"></label>
                <input asp-for="ProductID" class="form-control" />
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryQuantity" class="control-label text-white-50"></label>
                <input asp-for="InventoryQuantity" class="form-control" />
                <span asp-validation-for="InventoryQuantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="StoreID" value=@id />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h4 class="text-center text-white-50">Choose from the list below</h4>

<table class="table">
    <thead>
        <tr>
            <th class="text-white-50">
                Name:
            </th>
            <th class="text-white-50">
                ID:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in products)
        {
            <tr>
                <td class="text-white-50">
                    @prod.ProductName
                </td>
                <td class="text-white-50">
                    @prod.ID
                </td>
            </tr>
        }
    </tbody>
</table>


