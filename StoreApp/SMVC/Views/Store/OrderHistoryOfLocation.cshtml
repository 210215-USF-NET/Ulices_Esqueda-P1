@model IEnumerable<SModels.Orders>

@{
    ViewData["Title"] = "OrderHistory";
    int count = 1;
}

<h1 class="text-white text-center">Order History</h1>

<table class="table">
    <thead class="text-white-50">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderTotal)
            </th>
        </tr>
    </thead>
    <tbody class="text-white-50">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @count
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderTotal)
                </td>
                <td>
                    @Html.ActionLink("Details", "OrderDetails", "Login", new { id = item.ID })
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>
