@model SMVC.Models.StoreInventoryVM

@{
    ViewData["Title"] = "AddQuantityToCart";
}

<h1>Add To Cart</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuantityToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InventoryQuantity" class="control-label"></label>
                <input asp-for="InventoryQuantity" class="form-control" />
                <span asp-validation-for="InventoryQuantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="StoreID" value=@Model.StoreID />
            <input type="hidden" asp-for="ProductID" value=@Model.ProductID />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

